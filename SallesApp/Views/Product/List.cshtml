@using SallesApp.Helpers
@model SallesApp.ViewModel.ProductListViewModel

<div class="container">
    <div class="mb-3">
    @await Component.InvokeAsync("MenuCategory")
    </div>
    <div class="container">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <partial name="_ProductResume" for="@product" />
             <div>
                <a asp-controller="ShoppingCart" asp-action="AddProductToCart" asp-route-productId="@product.Id" class="btn btn-primary">Adicionar ao Carrinho @product.Id</a>
            </div> 
            }
        </div>
    </div>
</div>