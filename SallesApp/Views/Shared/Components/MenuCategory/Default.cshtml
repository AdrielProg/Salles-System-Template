<h4>Categoias</h4>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item">
            <a asp-controller="Product" asp-action="List" class="text-decoration-none"  asp-route-categoryId="@null">
                Todas as Categorias
            </a>
        </li>
        @foreach (var category in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="List" asp-route-categoryId="@category.Id"
                    class="text-decoration-none">
                    @category.Name
                </a>
            </li>
        }
    </ul>
    <div>
        <h2>@Context.Request.Query["categoryId"].ToString();</h2>
    </div>